<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="stock_view_picking_form_inherit" model="ir.ui.view">
        <field name="name">stock.view.picking.form.inherit</field>
        <field name="model">stock.picking</field>
        <field name="inherit_id" ref="stock.view_picking_form"/>
        <field name="arch" type="xml">
            <xpath expr="//header" position="inside">
                <field name="ip_validate_control" invisible="True"/>
            </xpath>
            <xpath expr="//header/button[3]" position="replace">
                <!-- <button name="button_validate" attrs="{'invisible': ['|', ('state', 'in', ('waiting','confirmed')), ('ip_validate_control', '=', False)]}" string="Validate" type="object" class="oe_highlight" groups="stock.group_stock_user" data-hotkey="v"/> -->
            </xpath>
            <xpath expr="//header/button[4]" position="replace">
                <button name="button_validate" attrs="{'invisible': ['|', ('state', 'not in', ('waiting', 'confirmed')), ('ip_validate_control', '=', False)]}" string="Validate" type="object" groups="stock.group_stock_user" class="o_btn_validate" data-hotkey="v"/>
            </xpath>
        </field>
    </record>

</odoo>
